{
  "manifest_version": 2,
  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "content_scripts": [
    {
     "matches": ["<all_urls>"],
     "js": ["lib/jquery/dist/jquery.min.js", "lib/jquery-ui/jquery-ui.min.js", "selection.js"],
     "run_at": "document_start",
     "all_frames": true
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "background": {
   "scripts": ["lib/jquery/dist/jquery.min.js", "background.js"] ,
   "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png"
  }
}
