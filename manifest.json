{
  "manifest_version": 2,
  "name": "Hoogle-It",
  "short_name": "Hoogle documentation box",
  "description": "Display haskell documentations in a box on text selection.",
  "version": "1.2",

  "content_scripts": [
    {
     "matches": ["<all_urls>"],
     "js": ["selection.js"],
     "run_at": "document_start",
     "all_frames": true
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "background": {
   "scripts": ["background.js"] ,
   "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png"
  }
}
